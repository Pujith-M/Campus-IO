<% include ../partials/header %>

<div class="container">
	<div class="text-center">
		<i class="fas fa-graduation-cap fa-3x"></i><br>
		<span>CAMPUS.IO</span><br><br>
	</div>
		<form class="col-md-6 offset-md-3"
			action="/quiz/addQuestions/<%= quizId %>"
			method="POST"> 
			<div class="overflow-hiddden">
				<div class="float-left">
					<legend> Add question <%= questionNo %>
					details</legend>
				</div>
				<div class="float-right">
					<a href="/quiz/priview/<%= quizId %>">
						<button class="btn btn-outline-success rounded float-right"
						type="button">Priview Quiz</button>
					</a>
				</div>
			</div>
			<div class="form-group">
				<label for="question">Question</label>
				<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
				type="text" name="question" required="true"></textarea>
			</div>
			<div id="optionContainer"></div>
			<div >
				<button id="addOption" class="btn btn-outline-success rounded float-left"
				type="button"> Add Option</button>
				<div class="overflow-hiddden padding-bottom" id="removeOption" >
					<button class="btn btn-outline-danger rounded float-right" type="button">Remove Option</button>
				</div>
			</div>
			<button class="btn btn-primary float-right" type="submit">
			Next Question</button>
		</form>
	</div>
</div>

<script type="text/javascript" src="/scripts/addQuestions.js"></script>
<% include ../partials/footer %>