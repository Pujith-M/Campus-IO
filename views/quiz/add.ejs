<div class="container">
	<form id="myForm" class="col-md-6 offset-md-3" action="/quiz/add" method="POST">
		<legend>Add Quiz details</legend>
		<div class="form-group">
			<label for="title">Title</label>
			<textarea class="form-control" id="exampleFormControlTextarea1"	type="text" name="title" rows="2" required="true"></textarea>
		</div></br>
		<div class="row">
			<div class="form-group col-md-6">
				<label for="category">Category</label>
				<select class="form-control" name="category" form="myForm" required="true">
					<option value = "">Select category</option>
					<option value = "oop">Object Oriented Programming</option>
					<option value = "ds">Data Structures</option>
					<option value = "dbs">Databases and DBMS</option>
					<option value = "nw">Computer Networks</option>
					<option value = "os">Operating Systems</option>
					<option value = "apt">General Aptitude</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<button class="btn btn-info" type="submit">Add Questions</button>
		</div>
	</form>
</div>

