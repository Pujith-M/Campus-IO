<div class="container">
	<form class="col-md-6 offset-md-3" id="myForm" action="/register" method="POST">
		<div class="text-center">
			<a href="/" id="homeLogo">
				<i class="fas fa-university fa-3x"></i><br>
				<span>CAMPUS.IO</span><br><br>
			</a>
		</div>
		<legend>Create a new account</legend>
		<div class="form-row">
			<div class="form-group col-md-6">
				<label for="fname">First Name</label>
				<input class="form-control" type="text" name="fname" placeholder="John" autofocus>
				<small class="form-text text-muted">
					This gets displayed on content.
				</small>
			</div>
			<div class="form-group col-md-6">
				<label for="lname">Last Name</label>
				<input class="form-control" type="text" name="lname" placeholder="Smith">
				<small class="form-text text-muted">
					Initials or surname.
				</small>
			</div>
		</div>
		<div class="form-row">
			<big>I am a </big>
		</div>
		<div class="form-check form-check-inline">
			<big>
				<label class="form-check-label">
					<input class="form-check-input" type="radio" name="radioOption" id="student" value="student" onclick="hideSupportDetails();" checked=""> Student
				</label>
			</big>
		</div>
		<div class="form-check form-check-inline">
			<big>
				<label class="form-check-label">
					<input class="form-check-input" type="radio" name="radioOption" id="support" value="support" onclick="showSupportDetails();"> Support
				</label>
			</big>
		</div>
		<div class="row" id="supportDetails" hidden="">
			<div class="form-group col-md-6">
				<label for="joinCode">Join Code</label>
				<input class="form-control" type="text" id="joinCode" name="joinCode">
				<small class="form-text text-muted">Contact admin for the code</small>
			</div>
		</div>
		<div class="form-row">
			<div class="form-group col-md-4">
				<label for="username">USN or Username</label>
				<input class="form-control" type="text" name="username">
				<small class="form-text text-muted">
					Make sure you remember it.
				</small>
			</div>
			<div class="form-group col-md-8">
				<label for="email">E-mail</label>
				<input class="form-control" type="email" name="email" placeholder="someone@example.com">
				<small class="form-text text-muted">
					We'll never share your email with anyone else.
				</small>
			</div>
		</div>
		<div class="row">
			<div class="form-group col-md-6">
				<label for="branch">Branch</label>
				<select class="form-control" name="branch" form="myForm">
					<option>Select branch</option>
					<option value="CSE">CSE</option>
					<option value="ISE">ISE</option>
					<option value="ECE">ECE</option>
					<option value="MECH">MECH</option>
					<option value="CIVIL">CIVIL</option>
				</select>
			</div>
			<div class="form-group col-md-6">
				<label for="college">College</label>
				<input class="form-control" type="text" name="college">
			</div>
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" type="password"	name="password">
			<small class="form-text text-muted">
				Enter a password of at least 8 characters.
			</small>
		</div>
		<div class="form-group">
			<label for="confirmPassword">Re-enter Password</label>
			<input class="form-control" type="password"	name="confirmPassword">
			<small class="form-text text-muted">
				Confirm your password by entering again.
			</small>
		</div>
		<div class="form-group">
			<button class="btn btn-info" type="submit">Submit</button>
			<a class="float-right" href="/login">Existing user? Sign In.</a>
		</div>
	</form>
</div>

<% include partials/footer %>